<h2>Зарегистрироваться</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.hidden_field :admin, :value => true %>
  <%= f.hidden_field :company_id, :value => nil %>

  <div class="field">
    <%= f.label :name, "Имя пользователя" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email,"E-mail" %><br />
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
    <em>(минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
