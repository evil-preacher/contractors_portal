<%= form_for sales_agent do |f| %>
  <%= render 'common/errors', resource: sales_agent %>
  <form>
    <div class="form-group">
      <%= f.label :asc, "Код учётной системы" %><br />
      <%= f.text_field :asc, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :IMEI, "IMEI" %><br />
      <p><small><i>15 символов</i></small><%= f.text_field :IMEI, class: "form-control" %></p>
    </div>

    <div class="form-group">
      <%= f.label :name, "ФИО" %><br />
      <%= f.text_field :name, class: "form-control text-capitalize", placeholder: 'Иван Человеков' %>
    </div>

    <div class="actions">
      <%= f.submit "Создать", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
