<%= form_for product_group do |f| %>
  <%= render 'common/errors', resource: product_group %>
  <form>
    <div class="form-group">
      <%= f.label :title, "Название группы товаров" %><br />
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :product_type_id, "Категория товаров" %><br />
      <%= f.collection_select :product_type_id, ProductType.where(company_id: current_user.company_id), :id, :title, {}, class: "form-control" %>
    </div>

    <%= f.hidden_field :company_id, :value => current_user.company.id %>

    <div class="actions">
      <%= f.submit "Создать", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
