<%= form_for category do |f| %>
  <%= render 'common/errors', resource: category %>
  <form>
    <div class="form-group">
      <%= f.label :accounting_system_code, "КУС" %><br />
      <%= f.text_field :accounting_system_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :title, "Название" %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :parent_code, "Код родителя" %><br />
      <%= f.collection_select :parent_code, Category.where(company_id: current_user.company_id), :accounting_system_code, :title, include_blank: true, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "#{category.new_record? ? 'Создать' : 'Изменить'}", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
