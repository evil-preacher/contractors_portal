<h1>Поиск</h1>

<%= form_for @search do |f| %>

  <div class="form-group">
    <%= f.label :keywords, "Ключевое слово" %><br />
    <%= f.text_field :keywords, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_type_id, "Категория товаров" %><br />
    <%= f.collection_select :product_type_id, ProductType.where(company_id: current_user.company_id), :id, :title, class: "form-control", include_blank: true %>
  </div>

  <div class="form-group">
    <%= f.label :product_group_id, "Группа товаров" %><br />
    <%= f.collection_select :product_group_id, ProductGroup.where(company_id: current_user.company_id), :id, :title, class: "form-control", include_blank: true %>
  </div>

  <div class="form-group">
    <%= f.label :brand_id, "Бренд" %><br />
    <%= f.collection_select :brand_id, Brand.where(company_id: current_user.company_id), :id, :title, include_blank: true, class: "form-control" %>
  </div>
  <div class="actions"><%= f.submit "Найти", class: 'btn btn-primary' %></div>
<% end %>
