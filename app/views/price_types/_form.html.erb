<%= form_for price_type do |f| %>
  <%= render 'common/errors', resource: price_type %>
  <form>
    <div class="form-group">
      <%= f.label :accounting_system_code, "Код учётной системы" %><br />
      <%= f.text_field :accounting_system_code, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :title, "Название" %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Создать", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
