<tr>
  <td><%= order_header.id %></td>
  <td><%= order_header.wtf_code %></td>
  <% if current_user.company.users.where(email: order_header.email).present? %>
    <td><%= current_user.company.users.where(email: order_header.email).first.name %></td>
  <% else %>
    <td>Мы его потеряли</td>
  <% end %>
  <td><%= current_user.company.shops.where(asc: order_header.shop_asc).first.title %></td>
  <td><%= order_header.sum %></td>
  <td><%= order_header.current_date.to_date %></td>
  <td><%= order_header.delivery_date.to_date %></td>
  <% if order_header.loaded %>
    <td>да</td>
  <% else %>
    <td>нет</td>
  <% end %>

  <td>
    <div class="btn-group btn-group-xs" role="group" aria-label="...">
      <%= link_to 'Показать', order_header_path(order_header), class: "btn btn-default" %>
    </div>
  </td>
</tr>
