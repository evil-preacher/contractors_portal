<%= form_for order_header do |f| %>
  <%= render 'common/errors', resource: order_header %>
  <form>
    <div class="form-group">
      <%= f.label :asc, "Код учётной системы" %><br />
      <%= f.text_field :asc, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :imei, "imei" %><br />
      <p><small><i>15 символов</i></small><%= f.text_field :imei, class: "form-control" %></p>
    </div>

    <div class="form-group">
      <%= f.label :current_date, "дата составления" %><br />
      <%= f.date_field :current_date, class: "form-control", value: DateTime.now.to_date %>
    </div>

    <div class="form-group">
      <%= f.label :delivery_date, "дата доставки" %><br />
      <%= f.date_field :delivery_date, class: "form-contro" %>
    </div>

    <div class="form-group">
      <%= f.label :shop_id, "Магазин" %><br />
      <%= f.collection_select :shop_id, Shop.where(company_id: current_user.company_id), :id, :title, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :comment, "Комментарий" %><br />
      <%= f.text_area :comment, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :wtf_code, "КодВКПК" %><br />
      <%= f.text_field :wtf_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :with_docs, "Документы?" %>
      <%= f.check_box :with_docs %>
    </div>

    <div class="form-group">
      <%= f.label :loaded, "Загружена в учётную систему" %>
      <%= f.check_box :loaded %>
    </div>

    <div class="actions">
      <%= f.submit "#{order_header.new_record? ? 'Продолжить' : 'Изменить'}", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
