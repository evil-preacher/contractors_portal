<%= form_for company do |f| %>
  <%= render 'common/errors', resource: company %>
  <form>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :bin %><br />
      <%= f.text_field :bin %>
    </div>

    <div class="form-group">
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>

    <div class="form-group">
      <%= f.label :address %><br />
      <%= f.text_area :address %>
    </div>

    <div class="actions">
      <%= f.submit "Создать", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
