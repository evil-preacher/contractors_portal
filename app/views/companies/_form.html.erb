<%= form_for company do |f| %>
  <%= render 'common/errors', resource: company %>
  <form>
    <div class="form-group">
      <%= f.label :name, "Название компании" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :bin, "БИН" %><br />
      <p><small>12 цифр</small><%= f.text_field :bin, class: "form-control" %></p>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Телефон" %><br />
      <p><small>В формате +7 XXX XXX XX XX</small> <%= f.telephone_field :phone, class: "form-control", pattern: "+7 [0-9]{3} [0-9]{3} [0-9]{2} [0-9]{2}"%></p>
    </div>

    <div class="form-group">
      <%= f.label :address, "Адрес" %><br />
      <%= f.text_area :address, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Создать", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
