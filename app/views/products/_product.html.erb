<tr>
  <td><%= product.accounting_system_code %></td>
  <td><%= product.title %></td>
  <td><%= product.barcode %></td>
  <td><%= product.category.title %></td>
  <% if product.brand.present? %>
    <td><%= product.brand.title %></td>
  <% else %>
    <td>--</td>
  <% end %>
  <% if product.remainders.present? %>
    <td><%= product.remainders.last.remainder %></td>
  <% else %>
    <td>0</td>
  <% end %>
  <td>
    <div class="btn-group-vertical btn-group-xs" role="group" aria-label="...">
      <%= link_to 'Показать', product_path(product), class: "btn btn-default" %>
      <%= link_to 'Изменить', edit_product_path(product), class: "btn btn-default" %>
      <%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?'}, class: "btn btn-default" %>
    </div>
  </td>
</tr>
