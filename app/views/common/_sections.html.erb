<div class="col-lg-2 col-md-2 col-sm-3 section">
  <% if user_signed_in? %>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul>
          <% if current_user.company.nil? %>
            <li><%= link_to '<i class="fa fa-building-o" aria-hidden="true"></i> Создать профиль компании'.html_safe, new_company_path, class: "btn btn-lg btn-block unit" %></li>
          <% else %>
            <li><%= link_to '<i class="fa fa-building-o" aria-hidden="true"></i> Профиль компании'.html_safe, company_path(current_user.company), class: "btn btn-lg btn-block unit" %></li>
          <% end %>
          <% if can? :manage, User %>
            <li><a href="/users" class="btn btn-lg btn-block unit"><i class="fa fa-users" aria-hidden="true"></i> Пользователи</a></li>
          <% end %>
          <hr>
            <li><a href="/categories" class="btn btn-lg btn-block unit"><i class="fa fa-folder-open" aria-hidden="true"></i> Классификатор</a></li>
            <% if current_user.company.present? %>
                <% if current_user.company.brands.present? %>
                    <li><a href="/brands" class="btn btn-lg btn-block unit"><i class="fa fa-language" aria-hidden="true"></i> Бренды</a></li>
                <% end %>
            <% end %>
            <li><a href="/products" class="btn btn-lg btn-block unit"><i class="fa fa-gift" aria-hidden="true"></i> Товары</a></li>
            <li><a href="/remainders" class="btn btn-lg btn-block unit"><i class="fa fa-cubes" aria-hidden="true"></i> Остатки</a></li>
            <li><a href="/shops" class="btn btn-lg btn-block unit"><i class="fa fa-shopping-basket" aria-hidden="true"></i> Магазины</a></li>
            <li><a href="/price_types" class="btn btn-lg btn-block unit"><i class="fa fa-calculator" aria-hidden="true"></i> Типы цен</a></li>
            <li><a href="/price_lists" class="btn btn-lg btn-block unit"><i class="fa fa-money" aria-hidden="true"></i> Цены</a></li>
            <li><a href="/order_headers" class="btn btn-lg btn-block unit"><i class="fa fa-tasks" aria-hidden="true"></i> Заявки</a></li>
            <li><a href="/routes" class="btn btn-lg btn-block unit"><i class="fa fa-retweet" aria-hidden="true"></i> Маршруты</a></li>
        </ul>
    </div>
  <% end %>
</div>
