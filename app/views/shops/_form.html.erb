<%= form_for shop do |f| %>
  <%= render 'common/errors', resource: shop %>
  <form>
    <div class="form-group">
      <%= f.label :accounting_system_code, "Код учётной системы" %><br />
      <%= f.text_field :accounting_system_code, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :title, "Название магазина" %><br />
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price_type_id, "Тип цен" %><br />
      <%= f.collection_select :price_type_id, PriceType.where(company_id: current_user.company_id), :id, :title, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Адрес" %><br />
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :latitude, "Широта" %><br />
      <%= f.text_field :latitude, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :longitude, "Долгота" %><br />
      <%= f.text_field :longitude, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Создать", class: 'btn btn-primary'%>
    </div>
  </form>
<% end %>
